body
  height 100%
  width 100%
  background #FFF

#navbar-layout-view
   header
     width 100%
     height 52px
     background #ccc
     border-bottom 1px solid #999
 
     button.nav-button
       height 30px
       width 100px
       border-radius 6px 6px 6px 6px;

.hidden
  display none
  visibility invisible

#picture-taker
  margin-top 40px;

  video
    border 1px solid #999
    display block
    margin 0 auto

  canvas#image-preview
    height 400px
    width 400px
    border 1px solid #999
    margin 0 auto

  button
    display block
    height 40px
    width 130px
    margin 10px auto

  label.form-label
    display block
    font-size 1em
    text-align center

  input
    display block
    height 20px
    width 230px
    margin 10px auto
